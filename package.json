{
  "name": "rayshine-marketplace",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/customer-website",
    "apps/provider-portal",
    "apps/admin-crm",
    "apps/backend",
    "packages/shared"
  ],
  "scripts": {
    "dev": "concurrently -n \"customer,provider,admin,backend\" -c \"blue,green,yellow,magenta\" \"npm run dev:customer\" \"npm run dev:provider\" \"npm run dev:admin\" \"npm run dev:backend\"",
    "dev:customer": "cd apps/customer-website && npm run dev",
    "dev:provider": "cd apps/provider-portal && npm run dev",
    "dev:admin": "cd apps/admin-crm && npm run dev",
    "dev:backend": "cd apps/backend && npm run dev",
    "build": "npm run build:shared && npm run build:customer && npm run build:provider && npm run build:admin && npm run build:backend",
    "build:shared": "cd packages/shared && npm run build",
    "build:customer": "cd apps/customer-website && npm run build",
    "build:provider": "cd apps/provider-portal && npm run build",
    "build:admin": "cd apps/admin-crm && npm run build",
    "build:backend": "cd apps/backend && npm run build",
    "install:all": "npm install && npm run install:apps",
    "install:apps": "cd apps/customer-website && npm install && cd ../provider-portal && npm install && cd ../admin-crm && npm install && cd ../backend && npm install && cd ../../packages/shared && npm install"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.5",
    "@types/react-big-calendar": "^1.16.2",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vite-plugin-pwa": "^1.0.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.56.0",
    "@tailwindcss/postcss": "^4.1.12",
    "internmap": "^2.0.3",
    "lucide-react": "^0.541.0",
    "react-big-calendar": "^1.19.4",
    "react-remove-scroll": "^2.7.1",
    "react-router-dom": "^7.8.2",
    "redux": "^5.0.1",
    "redux-thunk": "^3.1.0",
    "tailwindcss": "^4.1.12",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.8"
  }
}
